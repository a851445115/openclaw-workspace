#!/usr/bin/env bash
set -euo pipefail

ROOT=""
ACTOR="orchestrator"
TEXT=""
MODE="apply"
MILESTONES_MODE="send"
CONTROL_GROUP_ID="oc_041146c92a9ccb403a7f4f48fb59701d"
MILESTONE_ACCOUNT_ID="orchestrator"
ALLOW_BROADCASTER=0
VISIBILITY_MODE="handoff_visible"

while [[ $# -gt 0 ]]; do
  case "$1" in
    --root)
      ROOT="${2:-}"
      shift 2
      ;;
    --actor)
      ACTOR="${2:-}"
      shift 2
      ;;
    --text)
      TEXT="${2:-}"
      shift 2
      ;;
    --mode)
      MODE="${2:-}"
      shift 2
      ;;
    --milestones)
      MILESTONES_MODE="${2:-}"
      shift 2
      ;;
    --group-id)
      CONTROL_GROUP_ID="${2:-}"
      shift 2
      ;;
    --account-id)
      MILESTONE_ACCOUNT_ID="${2:-}"
      shift 2
      ;;
    --allow-broadcaster)
      ALLOW_BROADCASTER=1
      shift
      ;;
    --visibility-mode)
      VISIBILITY_MODE="${2:-}"
      shift 2
      ;;
    *)
      echo "unknown argument: $1" >&2
      exit 2
      ;;
  esac
done

if [[ -z "$TEXT" ]]; then
  echo "usage: orchestrator-router --text <command> [--root <path>] [--actor <name>] [--mode route|apply]" >&2
  exit 2
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PY="$SCRIPT_DIR/lib/task_board.py"
MILESTONE_PY="$SCRIPT_DIR/lib/milestones.py"

if [[ "$MODE" == "route" ]]; then
  python3 "$PY" route --actor "$ACTOR" --text "$TEXT"
  exit 0
fi

if [[ -z "$ROOT" ]]; then
  echo "--root is required in apply mode" >&2
  exit 2
fi

if [[ "$MILESTONES_MODE" != "send" && "$MILESTONES_MODE" != "dry-run" && "$MILESTONES_MODE" != "off" ]]; then
  echo "--milestones must be send|dry-run|off" >&2
  exit 2
fi


EFFECTIVE_ROOT="$ROOT"
DRY_RUN_TMP_ROOT=""
cleanup() {
  if [[ -n "$DRY_RUN_TMP_ROOT" && -d "$DRY_RUN_TMP_ROOT" ]]; then
    rm -rf "$DRY_RUN_TMP_ROOT"
  fi
}
trap cleanup EXIT

if [[ "$MILESTONES_MODE" == "dry-run" ]]; then
  DRY_RUN_TMP_ROOT="$(mktemp -d)"
  if [[ -d "$ROOT/state" ]]; then
    cp -R "$ROOT/state" "$DRY_RUN_TMP_ROOT/state"
  else
    mkdir -p "$DRY_RUN_TMP_ROOT/state"
  fi
  EFFECTIVE_ROOT="$DRY_RUN_TMP_ROOT"
fi

if [[ "$TEXT" =~ ^[[:space:]]*dispatch[[:space:]]+([A-Za-z0-9_-]+)[[:space:]]+([A-Za-z0-9_.-]+)([[:space:]]*:[[:space:]]*(.*))?[[:space:]]*$ ]]; then
  TASK_ID="${BASH_REMATCH[1]}"
  TARGET_AGENT="${BASH_REMATCH[2]}"
  TASK_PROMPT="${BASH_REMATCH[4]:-}"
  python3 "$MILESTONE_PY" dispatch \
    --root "$EFFECTIVE_ROOT" \
    --task-id "$TASK_ID" \
    --agent "$TARGET_AGENT" \
    --task "$TASK_PROMPT" \
    --actor "$ACTOR" \
    --group-id "$CONTROL_GROUP_ID" \
    --account-id "$MILESTONE_ACCOUNT_ID" \
    --mode "$MILESTONES_MODE" \
    --visibility-mode "$VISIBILITY_MODE"
  exit $?
fi

if [[ "$TEXT" =~ ^[[:space:]]*clarify[[:space:]]+([A-Za-z0-9_-]+)[[:space:]]+([A-Za-z0-9_.-]+)[[:space:]]*:[[:space:]]*(.+)$ ]]; then
  TASK_ID="${BASH_REMATCH[1]}"
  TARGET_ROLE="${BASH_REMATCH[2]}"
  QUESTION="${BASH_REMATCH[3]}"
  python3 "$MILESTONE_PY" clarify \
    --root "$EFFECTIVE_ROOT" \
    --task-id "$TASK_ID" \
    --role "$TARGET_ROLE" \
    --question "$QUESTION" \
    --actor "$ACTOR" \
    --group-id "$CONTROL_GROUP_ID" \
    --account-id "$MILESTONE_ACCOUNT_ID" \
    --mode "$MILESTONES_MODE"
  exit $?
fi

# Feishu parser: @orchestrator create project/run/status and wake-up reports.
FEISHU_JSON="$(python3 "$MILESTONE_PY" feishu-router \
  --root "$EFFECTIVE_ROOT" \
  --actor "$ACTOR" \
  --text "$TEXT" \
  --group-id "$CONTROL_GROUP_ID" \
  --account-id "$MILESTONE_ACCOUNT_ID" \
  --mode "$MILESTONES_MODE" \
  --visibility-mode "$VISIBILITY_MODE" || true)"
if [[ "$FEISHU_JSON" == *'"handled": true'* ]]; then
  echo "$FEISHU_JSON"
  if [[ "$FEISHU_JSON" == *'"ok": true'* ]]; then
    exit 0
  fi
  exit 1
fi

APPLY_JSON="$(python3 "$PY" apply --root "$EFFECTIVE_ROOT" --actor "$ACTOR" --text "$TEXT")"
echo "$APPLY_JSON"

if [[ "$MILESTONES_MODE" != "off" ]]; then
  if [[ "$MILESTONES_MODE" == "dry-run" ]]; then
    if [[ "$ALLOW_BROADCASTER" -eq 1 ]]; then
      MILESTONE_JSON="$(python3 "$MILESTONE_PY" publish-apply \
        --root "$EFFECTIVE_ROOT" \
        --actor "$ACTOR" \
        --apply-json "$APPLY_JSON" \
        --group-id "$CONTROL_GROUP_ID" \
        --account-id "$MILESTONE_ACCOUNT_ID" \
        --mode "$MILESTONES_MODE" \
        --allow-broadcaster)" || {
          echo "warning: milestone dry-run generation failed (intent still applied)" >&2
          exit 0
        }
    else
      MILESTONE_JSON="$(python3 "$MILESTONE_PY" publish-apply \
        --root "$EFFECTIVE_ROOT" \
        --actor "$ACTOR" \
        --apply-json "$APPLY_JSON" \
        --group-id "$CONTROL_GROUP_ID" \
        --account-id "$MILESTONE_ACCOUNT_ID" \
        --mode "$MILESTONES_MODE")" || {
          echo "warning: milestone dry-run generation failed (intent still applied)" >&2
          exit 0
        }
    fi
    echo "$MILESTONE_JSON" >&2
  else
    if [[ "$ALLOW_BROADCASTER" -eq 1 ]]; then
      python3 "$MILESTONE_PY" publish-apply \
        --root "$EFFECTIVE_ROOT" \
        --actor "$ACTOR" \
        --apply-json "$APPLY_JSON" \
        --group-id "$CONTROL_GROUP_ID" \
        --account-id "$MILESTONE_ACCOUNT_ID" \
        --mode "$MILESTONES_MODE" \
        --allow-broadcaster >/dev/null || {
          echo "warning: milestone publish failed (intent still applied)" >&2
        }
    else
      python3 "$MILESTONE_PY" publish-apply \
        --root "$EFFECTIVE_ROOT" \
        --actor "$ACTOR" \
        --apply-json "$APPLY_JSON" \
        --group-id "$CONTROL_GROUP_ID" \
        --account-id "$MILESTONE_ACCOUNT_ID" \
        --mode "$MILESTONES_MODE" >/dev/null || {
          echo "warning: milestone publish failed (intent still applied)" >&2
        }
    fi
  fi
fi
